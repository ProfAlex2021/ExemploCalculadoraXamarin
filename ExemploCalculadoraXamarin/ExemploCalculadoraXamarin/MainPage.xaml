<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExemploCalculadoraXamarin.MainPage">

    <StackLayout>
        <Label Text="Número" />
        <Entry x:Name="txtNumero" Keyboard="Numeric" Placeholder="Número"/>
        <Label Text="Outro Número" />
        <Entry x:Name="txtOutroNumero" Keyboard="Numeric" Placeholder="OutroNúmero"/>
        <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked"/>

    </StackLayout>

</ContentPage>
